    printf("Enter the 2nd sub mark[out of 100] : ");
    scanf("%d",&b);
    printf("Enter the 3rd sub mark[out of 100] : ");
    scanf("%d",&c);
    if (a >= 40 && b>=40 && c>=40)
    {
        printf("You passed in all exams");
    }
    else if ( a<40&&b<40&&c<40)
    {
