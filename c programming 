int main()
{
    int a,b,c,d;
    printf("Enter the length of the rectangle : ");
    scanf("%d",&a);
    printf("Enter the breadth of the rectangle : ");
    scanf("%d",&b);
    c=2*(a+b);
    printf("The perimeter of the rectangle : %d \n",c);
    d=a*b;
    printf("The area of the rectangle : %d \n \n",d);


    int e,f,g;
    printf("Enter the lentgth the square :");
    scanf("%d",&e);
    f=4*e;
    printf("The perimeter of the square is %d \n",f);
    g=e*e;
    printf("The area of the square is %d \n",g);
}
