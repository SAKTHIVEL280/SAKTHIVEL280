{
    int a,n;
    printf("Enter the number : ");
    scanf("%d",&a);
    for (int i =1;i<=a;i++)
    {
        if(i%2==0)
        {
            n=n+1;
            printf("%d \n",i);
        }
    }
    printf("The number of even number is %d",n);
}
