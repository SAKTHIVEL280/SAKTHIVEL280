[20/11, 11:07 pm] SAKTHIVEL: sum of digits of a number 
#include<stdio.h>
int main ()
{
    int n,s= 0;
    printf("Enter the number : ");
    scanf("%d",&n);
    while(n!=0){
        s+=n%10;
        n=n/10;
    }
    printf("Sum : %d\n",s);
}
[21/11, 6:49 pm] SAKTHIVEL: #include <stdio.h>
int main()
{
    char n;
    int a,b,c,d,e,f;
    printf("Enter 2 numbers with space : ");
    scanf("%d %d",&a,&b);
    printf("Enter the operations [+,-,*,/] : ");
    scanf("%s",&n);
    if (n=='+')
    {
        printf("addition of %d and %d is %d",a,b,a+b);
    }
    else if(n=='-')
    {
        printf("subtraction of %d and %d is %d",a,b,a-b);
    }
    else if(n=='*')
    {
        printf("multiplication of %d and %d is %d",a,b,a*b);
    }
    else if(n=='/')
    {
        printf("division of %d and %d is %d",a,b,a/b);
    }
    else
    {
        printf("Enter the correct operator ! try again ");
    }
}
[21/11, 6:53 pm] SAKTHIVEL: switching number with variables 
#include <stdio.h>
int main()
{
    int a,b,temp;
    printf("Enter a :");
    scanf("%d",&a);
    printf("Enter b :");
    scanf("%d",&b);
    temp=a;
    a=b;
    b=temp;
    printf("a is %d and b is %d",a,b);
    
}
[21/11, 7:03 pm] SAKTHIVEL: flyod triangle 
#include <stdio.h>
int main()
{
    int a,b;
    printf("Enter how many rows : ");
    scanf("%d",&a);
    for(int i =0;i<a;i++)
    {
        for(int j=0;j<=i;j++)
        {
            b=b+1;
            printf("%d ",b);
        }
        printf("\n");
    }
    
}