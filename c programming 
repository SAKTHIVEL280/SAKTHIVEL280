[17/11, 10:57 pm] SAKTHIVEL: net salary
#include <stdio.h>

int main()
{
	float b, da, hra, ta, others,m,n,o;
	float pf,it;
	float ns;
	printf("Enter Basic Salary : ");
	scanf("%f",&b);
	printf("Enter HRA : ");
	scanf("%f",&hra);
	printf("Enter TA : ");
	scanf("%f",&ta);	
	printf("Enter others : ");
	scanf("%f",&others);
	printf("DA % ");
	scanf("%d",&n);
	printf("pf % ");
	scanf("%d",&m);
	printf("it % ");
	scanf("%d",&o);
	
	da = (b*n)/100;
	pf = (b*m)/100;
	it = (b*o)/100;
	ns = b + da + hra + ta + others - (pf+it);
	printf("Net Salary is: %.02f\n",ns);
	
	return 0;
}
